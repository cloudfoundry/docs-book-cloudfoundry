<!doctype html>
<html>
<head>
  <meta charset="utf-8">

  <!-- Always force latest IE rendering engine or request Chrome Frame -->
  <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

  <!-- Use title if it's in the page YAML frontmatter -->
  <title>
    <% if data.page.title %>
      <%= data.page.title %> |
    <% end %>
    Pivotal Docs
  </title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%= stylesheet_link_tag 'master', :media => 'screen,print' %>
  <%= stylesheet_link_tag 'print', :media => 'print' %>
  <link href='/images/favicon.ico' rel='shortcut icon'>
  <%= javascript_include_tag  "all" %>

  <script type="text/javascript">
    if (window.location.host === '<%= production_host %>') {
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-39702075-1']);
      _gaq.push(['_setDomainName', 'run.pivotal.io']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
    }
  </script>
</head>

<body class="<%= page_classes %> <%= yield_for_subnav.empty? ? '' : 'has-subnav' %>">

<div class="viewport">
<div class='wrap'>
  <script src="//use.typekit.net/clb0qji.js" type="text/javascript"></script>
  <script type="text/javascript">
      try {
          Typekit.load();
      } catch (e) {
      }
  </script>
  <script type="text/javascript">
      document.domain = "run.pivotal.io";
  </script>

  <script type="text/javascript">
    WebFontConfig = {
      google: { families: [ 'Source+Sans+Pro:300italic,400italic,300,400,600:latin' ] }
    };
    (function() {
      var wf = document.createElement('script');
      wf.src = ('https:' == document.location.protocol ? 'https' : 'http') +
        '://ajax.googleapis.com/ajax/libs/webfont/1/webfont.js';
      wf.type = 'text/javascript';
      wf.async = 'true';
      var s = document.getElementsByTagName('script')[0];
      s.parentNode.insertBefore(wf, s);
    })();
  </script>

  <%# @TODO: Replace with better if(homepage) check %>
  <% if current_page.data.title %>
    <header class="header header-layout">
      <h1 class="logo">
        <a href="/"><%= vars.book_title || 'Default Book Title' %></a>
      </h1>
      <%# @TODO: Replace with dynamic versioning %>
      <% if page_classes == "pivotalcf pivotalcf_index" %>
        <div class="header-dropdown">
          <a class="header-dropdown-link" href="#">
            v1.2.0.0
          </a>
          <div class="header-dropdown-content">
            <ul>
              <li><a href="">v1.2.0.0</a></li>
            </ul>
          </div>
        </div>
      <% end %>
      <div class="header-links js-bar-links">
        <div class="btn-menu" data-behavior="MenuMobile"></div>
        <div class="header-item">
          <a href="<%=vars.support_url%>" target="_blank">Support</a>
        </div>
        <div class="header-item searchbar js-searchbar">
          <a class="search-icon" data-behavior="Search"></a>
          <div class="search-input">
            <!-- Google CSE Search Box -->
            <div class="search-input-inner" id="docs-search">
                <gcse:search></gcse:search>
            </div>
          </div>
        </div>
      </div>
    </header>
  <% else %>
    <header class="header-home">
      <div class="home-links js-bar-links">
        <div class="btn-menu" data-behavior="MenuMobile"></div>
        <div class="header-item">
          <a href="<%=vars.support_url%>" target="_blank">Need Support?</a>
        </div>
        <div class="header-item searchbar js-searchbar">
          <a class="search-icon" data-behavior="Search"></a>
          <div class="search-input">
            <!-- Google CSE Search Box -->
            <div class="search-input-inner" id="docs-search">
                <gcse:search></gcse:search>
            </div>
          </div>
        </div>
      </div>
      <h1 class="title-flashy">
       <img src="<%=vars.title_image%>"> <br> <%=vars.title%>
      </h1>
      <h2 class="title-intro">
        <%=vars.hero_text%>
      </h2>
    </header>
  <% end %>

  <div class="container">

      <%= yield_for_subnav %>

      <main class="content content-layout" id="js-content" role="main">
        <a id="top"></a>
        <% if current_page.data.title %>
          <h1 class="title-container">
            <%= current_page.data.title %>
          </h1>
          <% if quick_links %>
            <div id="js-quick-links">
              <%= quick_links %>
            </div>
          <% end %>
        <% end %>
        <div class="to-top" id="js-to-top">
          <a href="#top" title="back to top"></a>
        </div>
        <%= yield %>
      </main><!--end of content-->

  </div><!-- end of container -->

  <script type="text/javascript">
    (function() {
      var didInit = false;
      function initMunchkin() {
        if(didInit === false) {
          didInit = true;
          Munchkin.init('625-IUJ-009');
        }
      }
      var s = document.createElement('script');
      s.type = 'text/javascript';
      s.async = true;
      s.src = document.location.protocol + '//munchkin.marketo.net/munchkin.js';
      s.onreadystatechange = function() {
        if (this.readyState == 'complete' || this.readyState == 'loaded') {
          initMunchkin();
        }
      };
      s.onload = initMunchkin;
      document.getElementsByTagName('head')[0].appendChild(s);
    })();
  </script>
</div><!--end of wrap-->
</div><!--end of viewport-->

<div id="scrim"></div>

<div class="container">
  <footer class="site-footer-links">
    <div class="copyright">
      <a href='/'>Pivotal Documentation</a>
      &copy; <%= Time.now.year %> <a href='http://pivotal.io'>Pivotal Software</a>, Inc. All Rights Reserved.
  </div>
  <div class="support">
    Need help? <a href="<%=vars.support_url%>" target="_blank">Visit Support</a>
  </footer>
</div><!--end of container-->

</body>
</html>
